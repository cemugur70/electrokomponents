<!-- Hero Slider -->
<section class="hero-slider">
    <div class="slider-container" id="heroSlider">
        <% if (sliders && sliders.length> 0) { %>
            <% sliders.forEach((slide, index)=> { %>
                <div class="slide <%= index === 0 ? 'active' : '' %>"
                    style="background-image: url('<%= slide.resim_url || '/images/slider-default.jpg' %>')">
                    <div class="slide-overlay"></div>
                    <div class="slide-content">
                        <div class="container">
                            <% if (slide.alt_baslik) { %>
                                <span class="slide-subtitle">
                                    <%= slide.alt_baslik %>
                                </span>
                                <% } %>
                                    <h1 class="slide-title">
                                        <%= slide.baslik || 'ElectroKomponents' %>
                                    </h1>
                                    <% if (slide.aciklama) { %>
                                        <p class="slide-description">
                                            <%= slide.aciklama %>
                                        </p>
                                        <% } %>
                                            <% if (slide.link) { %>
                                                <a href="<%= slide.link %>" class="btn btn-primary btn-lg">
                                                    <%= slide.buton_text || 'Keşfet' %>
                                                        <i class="fas fa-arrow-right"></i>
                                                </a>
                                                <% } %>
                        </div>
                    </div>
                </div>
                <% }) %>
                    <% } else { %>
                        <div class="slide active" style="background: linear-gradient(135deg, #1e3a5f 0%, #0a1628 100%)">
                            <div class="slide-content">
                                <div class="container">
                                    <span class="slide-subtitle">Endüstriyel Çözümler</span>
                                    <h1 class="slide-title">Elektronik Komponent<br>Tedarikçiniz</h1>
                                    <p class="slide-description">50.000'den fazla ürün, hızlı teslimat ve teknik destek
                                    </p>
                                    <a href="/kategori/yari-iletkenler" class="btn btn-primary btn-lg">
                                        Ürünleri Keşfet
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% } %>

                            <!-- Slider Controls -->
                            <button class="slider-arrow prev" id="sliderPrev">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                            <button class="slider-arrow next" id="sliderNext">
                                <i class="fas fa-chevron-right"></i>
                            </button>

                            <!-- Slider Dots -->
                            <div class="slider-dots" id="sliderDots">
                                <% if (sliders && sliders.length> 0) { %>
                                    <% sliders.forEach((slide, index)=> { %>
                                        <button class="dot <%= index === 0 ? 'active' : '' %>"
                                            data-index="<%= index %>"></button>
                                        <% }) %>
                                            <% } else { %>
                                                <button class="dot active" data-index="0"></button>
                                                <% } %>
                            </div>
    </div>
</section>

