<!-- Breadcrumb -->
<nav class="breadcrumb-nav">
    <div class="container">
        <ol class="breadcrumb-list">
            <li><a href="/">Ana Sayfa</a></li>
            <% if (urun.kategori) { %>
                <li><a href="/kategori/<%= urun.kategori.slug %>">
                        <%= urun.kategori.ad %>
                    </a></li>
                <% } %>
                    <li class="active">
                        <%= urun.ad.substring(0, 50) %>
                            <%= urun.ad.length> 50 ? '...' : '' %>
                    </li>
        </ol>
    </div>
</nav>

<div class="product-detail-page">
    <div class="container">
        <div class="product-detail-layout">
            <!-- Sol: Ürün Galeri -->
            <div class="product-gallery">
                <div class="main-image" id="mainImage">
                    <% if (urun.resimler && urun.resimler.length> 0) { %>
                        <img src="<%= urun.resimler[0].resim_url %>" alt="<%= urun.ad %>" id="mainProductImage">
                        <% } else { %>
                            <img src="/images/no-image.png" alt="<%= urun.ad %>" id="mainProductImage">
                            <% } %>
                                <button class="zoom-btn" id="zoomBtn"><i class="fas fa-search-plus"></i></button>
                </div>

                <% if (urun.resimler && urun.resimler.length> 1) { %>
                    <div class="thumbnail-list">
                        <% urun.resimler.forEach((resim, index)=> { %>
                            <button class="thumbnail <%= index === 0 ? 'active' : '' %>"
                                onclick="changeImage('<%= resim.resim_url %>', this)">
                                <img src="<%= resim.resim_url %>" alt="<%= urun.ad %> - <%= index + 1 %>">
                            </button>
                            <% }) %>
                    </div>
                    <% } %>
            </div>

            <!-- Sağ: Ürün Bilgileri -->
            <div class="product-info-detail">
                <!-- Marka & Parça No -->
                <div class="product-meta-detail">
                    <% if (urun.marka) { %>
                        <a href="/marka/<%= urun.marka.slug %>" class="product-brand-badge">
                            <%= urun.marka.ad %>
                        </a>
                        <% } %>
                            <span class="product-pn-detail">Parça No: <strong>
                                    <%= urun.parca_no %>
                                </strong></span>
                </div>

                <!-- Ürün Adı -->
                <h1 class="product-title-detail">
                    <%= urun.ad %>
                </h1>

                <!-- Kısa Açıklama -->
                <% if (urun.kisa_aciklama) { %>
                    <p class="product-short-desc">
                        <%= urun.kisa_aciklama %>
                    </p>
                    <% } %>

                        <!-- Stok Durumu -->
                        <div class="stock-status-detail">
                            <% if (urun.stok> 0) { %>
                                <span class="in-stock">
                                    <i class="fas fa-check-circle"></i>
                                    Stokta (<%= urun.stok %> adet)
                                </span>
                                <% } else { %>
                                    <span class="out-of-stock">
                                        <i class="fas fa-times-circle"></i>
                                        Stokta Yok
                                    </span>
                                    <% } %>
                                        <span class="min-order">Min. Sipariş: <%= urun.min_siparis || 1 %> adet</span>
                        </div>

                        <!-- Fiyat Kademeleri -->
                        <% if (urun.fiyat_kademeleri && urun.fiyat_kademeleri.length> 0) { %>
                            <div class="price-tiers">
                                <h4>Fiyat Kademeleri</h4>
                                <table class="price-tier-table">
                                    <thead>
                                        <tr>
                                            <th>Adet</th>
                                            <th>Birim Fiyat</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% urun.fiyat_kademeleri.forEach(kademe=> { %>
                                            <tr>
                                                <td>
                                                    <%= kademe.min_adet %>
                                                        <%= kademe.max_adet ? ' - ' + kademe.max_adet : '+' %>
                                                </td>
                                                <td class="tier-price">
                                                    <%= parseFloat(kademe.fiyat).toFixed(2).replace('.', ',' ) %> ₺
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                                <!-- Tek Fiyat -->
                                <div class="single-price">
                                    <span class="price-label">Birim Fiyat:</span>
                                    <span class="price-value">
                                        <%= parseFloat(urun.fiyat).toFixed(2).replace('.', ',' ) %> ₺
                                    </span>
                                    <span class="price-vat">+ KDV (%<%= urun.kdv_orani %>)</span>
                                </div>
                                <% } %>

                                    <!-- Sepete Ekle -->
                                    <div class="add-to-cart-section">
                                        <div class="quantity-selector-lg">
                                            <button class="qty-btn" id="qtyMinus">-</button>
                                            <input type="number" id="productQty" value="<%= urun.min_siparis || 1 %>"
                                                min="<%= urun.min_siparis || 1 %>" class="qty-input-lg">
                                            <button class="qty-btn" id="qtyPlus">+</button>
                                        </div>

                                        <button class="btn btn-primary btn-lg add-to-cart-btn" id="addToCartBtn"
                                            data-product-id="<%= urun.id %>" <%=urun.stok <=0 ? 'disabled' : '' %>>
                                            <i class="fas fa-shopping-cart"></i>
                                            Sepete Ekle
                                        </button>

                                        <button class="btn btn-secondary btn-icon-lg favorite-btn"
                                            data-product-id="<%= urun.id %>" title="Favorilere Ekle">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    </div>

                                    <!-- Ek Bilgiler -->
                                    <div class="product-extra-info">
                                        <div class="info-item">
                                            <i class="fas fa-truck"></i>
                                            <span>Aynı gün kargo (15:00'a kadar verilen siparişler)</span>
                                        </div>
                                        <div class="info-item">
                                            <i class="fas fa-shield-alt"></i>
                                            <span>Orijinal ürün garantisi</span>
                                        </div>
                                        <% if (urun.datasheet_url) { %>
                                            <div class="info-item">
                                                <i class="fas fa-file-pdf"></i>
                                                <a href="<%= urun.datasheet_url %>" target="_blank">Datasheet İndir</a>
                                            </div>
                                            <% } %>
                                    </div>
            </div>
        </div>

        <!-- Tab Menü -->
        <div class="product-tabs">
            <div class="tab-buttons">
                <button class="tab-btn active" data-tab="description">Açıklama</button>
                <button class="tab-btn" data-tab="specs">Teknik Özellikler</button>
                <button class="tab-btn" data-tab="documents">Dökümanlar</button>
            </div>

            <div class="tab-contents">
                <!-- Açıklama -->
                <div class="tab-content active" id="tab-description">
                    <% if (urun.aciklama) { %>
                        <%- urun.aciklama %>
                            <% } else { %>
                                <p class="no-content">Bu ürün için açıklama eklenmemiş.</p>
                                <% } %>
                </div>

                <!-- Teknik Özellikler -->
                <div class="tab-content" id="tab-specs">
                    <% if (urun.ozellikler && urun.ozellikler.length> 0) { %>
                        <table class="specs-table">
                            <tbody>
                                <% urun.ozellikler.forEach(ozellik=> { %>
                                    <tr>
                                        <th>
                                            <%= ozellik.ozellik_adi %>
                                        </th>
                                        <td>
                                            <%= ozellik.ozellik_degeri %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <% } else { %>
                            <p class="no-content">Bu ürün için teknik özellik eklenmemiş.</p>
                            <% } %>
                </div>

                <!-- Dökümanlar -->
                <div class="tab-content" id="tab-documents">
                    <% if (urun.datasheet_url) { %>
                        <div class="document-list">
                            <a href="<%= urun.datasheet_url %>" target="_blank" class="document-item">
                                <i class="fas fa-file-pdf"></i>
                                <div class="document-info">
                                    <span class="document-name">Datasheet</span>
                                    <span class="document-type">PDF Dosyası</span>
                                </div>
                                <i class="fas fa-download"></i>
                            </a>
                        </div>
                        <% } else { %>
                            <p class="no-content">Bu ürün için döküman bulunmuyor.</p>
                            <% } %>
                </div>
            </div>
        </div>

        <!-- Benzer Ürünler -->
        <% if (benzerUrunler && benzerUrunler.length> 0) { %>
            <section class="similar-products">
                <h2>Benzer Ürünler</h2>
                <div class="product-grid">
                    <% benzerUrunler.forEach(similarUrun=> { %>
                        <%- include('../partials/product-card', { urun: similarUrun }) %>
                            <% }) %>
                </div>
            </section>
            <% } %>
    </div>
</div>

<style>
    .product-detail-page {
        padding: 30px 0 60px;
    }

    .product-detail-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 50px;
        margin-bottom: 50px;
    }

    /* Gallery */
    .product-gallery {
        position: sticky;
        top: 160px;
        height: fit-content;
    }

    .main-image {
        position: relative;
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-lg);
        padding: 40px;
        margin-bottom: 16px;
        text-align: center;
    }

    .main-image img {
        max-width: 100%;
        max-height: 400px;
        object-fit: contain;
    }

    .zoom-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        width: 40px;
        height: 40px;
        background: rgba(0, 0, 0, 0.5);
        border: none;
        border-radius: var(--radius-md);
        color: white;
        cursor: pointer;
        transition: background 0.2s;
    }

    .zoom-btn:hover {
        background: var(--color-primary);
    }

    .thumbnail-list {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .thumbnail {
        width: 80px;
        height: 80px;
        background: var(--bg-card);
        border: 2px solid var(--border-color);
        border-radius: var(--radius-md);
        padding: 8px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .thumbnail:hover,
    .thumbnail.active {
        border-color: var(--color-primary);
    }

    .thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    /* Product Info */
    .product-meta-detail {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 16px;
    }

    .product-brand-badge {
        background: rgba(59, 130, 246, 0.15);
        color: var(--color-primary);
        padding: 6px 14px;
        border-radius: var(--radius-full);
        font-size: 0.85rem;
        font-weight: 600;
    }

    .product-pn-detail {
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .product-pn-detail strong {
        color: var(--text-secondary);
        font-family: monospace;
    }

    .product-title-detail {
        font-size: 1.75rem;
        font-weight: 700;
        line-height: 1.3;
        margin-bottom: 16px;
    }

    .product-short-desc {
        color: var(--text-secondary);
        margin-bottom: 20px;
        line-height: 1.7;
    }

    .stock-status-detail {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 24px;
    }

    .in-stock {
        color: var(--color-success);
        font-weight: 500;
    }

    .out-of-stock {
        color: var(--color-error);
        font-weight: 500;
    }

    .min-order {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    /* Price Tiers */
    .price-tiers {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-lg);
        padding: 20px;
        margin-bottom: 24px;
    }

    .price-tiers h4 {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-bottom: 16px;
    }

    .price-tier-table {
        width: 100%;
        border-collapse: collapse;
    }

    .price-tier-table th,
    .price-tier-table td {
        padding: 10px 16px;
        text-align: left;
        border-bottom: 1px solid var(--border-color);
    }

    .price-tier-table th {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--text-muted);
        text-transform: uppercase;
    }

    .tier-price {
        font-weight: 600;
        color: var(--color-primary);
        font-size: 1.1rem;
    }

    /* Single Price */
    .single-price {
        display: flex;
        align-items: baseline;
        gap: 12px;
        margin-bottom: 24px;
    }

    .price-label {
        color: var(--text-muted);
    }

    .price-value {
        font-size: 2rem;
        font-weight: 700;
        color: var(--color-primary);
    }

    .price-vat {
        font-size: 0.85rem;
        color: var(--text-muted);
    }

    /* Add to Cart */
    .add-to-cart-section {
        display: flex;
        gap: 12px;
        margin-bottom: 24px;
    }

    .quantity-selector-lg {
        display: flex;
        align-items: center;
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-md);
    }

    .quantity-selector-lg .qty-btn {
        width: 44px;
        height: 50px;
        font-size: 1.2rem;
        color: var(--text-secondary);
    }

    .qty-input-lg {
        width: 60px;
        height: 50px;
        background: transparent;
        border: none;
        text-align: center;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-primary);
        -moz-appearance: textfield;
    }

    .add-to-cart-btn {
        flex: 1;
    }

    .btn-icon-lg {
        width: 50px;
        height: 50px;
        padding: 0;
        font-size: 1.2rem;
    }

    .favorite-btn.active {
        background: var(--color-error);
        border-color: var(--color-error);
        color: white;
    }

    /* Extra Info */
    .product-extra-info {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .info-item i {
        color: var(--color-success);
        width: 20px;
    }

    .info-item a {
        color: var(--color-primary);
    }

    /* Tabs */
    .product-tabs {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-lg);
        overflow: hidden;
        margin-bottom: 50px;
    }

    .tab-buttons {
        display: flex;
        border-bottom: 1px solid var(--border-color);
    }

    .tab-btn {
        flex: 1;
        padding: 16px 24px;
        background: none;
        border: none;
        color: var(--text-secondary);
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
    }

    .tab-btn:hover {
        color: var(--text-primary);
        background: rgba(255, 255, 255, 0.02);
    }

    .tab-btn.active {
        color: var(--color-primary);
        border-bottom: 2px solid var(--color-primary);
        margin-bottom: -1px;
    }

    .tab-contents {
        padding: 24px;
    }

    .tab-content {
        display: none;
    }

    .tab-content.active {
        display: block;
    }

    .no-content {
        color: var(--text-muted);
        text-align: center;
        padding: 40px;
    }

    .specs-table {
        width: 100%;
        border-collapse: collapse;
    }

    .specs-table th,
    .specs-table td {
        padding: 12px 16px;
        border-bottom: 1px solid var(--border-color);
    }

    .specs-table th {
        width: 40%;
        text-align: left;
        font-weight: 500;
        color: var(--text-secondary);
    }

    .document-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .document-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px;
        background: var(--bg-input);
        border-radius: var(--radius-md);
        transition: all 0.2s;
    }

    .document-item:hover {
        background: var(--bg-card-hover);
    }

    .document-item>i:first-child {
        font-size: 2rem;
        color: var(--color-error);
    }

    .document-info {
        flex: 1;
    }

    .document-name {
        display: block;
        font-weight: 500;
    }

    .document-type {
        font-size: 0.85rem;
        color: var(--text-muted);
    }

    /* Similar Products */
    .similar-products h2 {
        font-size: 1.5rem;
        margin-bottom: 24px;
    }

    /* Responsive */
    @media (max-width: 992px) {
        .product-detail-layout {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .product-gallery {
            position: static;
        }
    }

    @media (max-width: 768px) {
        .add-to-cart-section {
            flex-wrap: wrap;
        }

        .quantity-selector-lg {
            width: 100%;
            justify-content: center;
        }

        .add-to-cart-btn {
            flex: 1 1 70%;
        }
    }
</style>

<script>
    // Change Image
    function changeImage(url, btn) {
        document.getElementById('mainProductImage').src = url;
        document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
        btn.classList.add('active');
    }

    // Quantity Controls
    document.getElementById('qtyMinus').addEventListener('click', () => {
        const input = document.getElementById('productQty');
        const min = parseInt(input.min) || 1;
        if (parseInt(input.value) > min) {
            input.value = parseInt(input.value) - 1;
        }
    });

    document.getElementById('qtyPlus').addEventListener('click', () => {
        const input = document.getElementById('productQty');
        input.value = parseInt(input.value) + 1;
    });

    // Add to Cart
    document.getElementById('addToCartBtn').addEventListener('click', async function () {
        const productId = this.dataset.productId;
        const qty = parseInt(document.getElementById('productQty').value);

        this.disabled = true;
        this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Ekleniyor...';

        try {
            const response = await fetch('/api/sepet/ekle', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ urun_id: productId, adet: qty })
            });

            const data = await response.json();

            if (data.success) {
                this.innerHTML = '<i class="fas fa-check"></i> Sepete Eklendi!';
                // Update cart badge
                const badge = document.getElementById('cartBadge');
                if (badge) badge.textContent = parseInt(badge.textContent) + 1;

                setTimeout(() => {
                    this.innerHTML = '<i class="fas fa-shopping-cart"></i> Sepete Ekle';
                    this.disabled = false;
                }, 2000);
            } else {
                alert(data.message);
                this.innerHTML = '<i class="fas fa-shopping-cart"></i> Sepete Ekle';
                this.disabled = false;
            }
        } catch (error) {
            console.error(error);
            this.innerHTML = '<i class="fas fa-shopping-cart"></i> Sepete Ekle';
            this.disabled = false;
        }
    });

    // Tabs
    document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.addEventListener('click', function () {
            const tab = this.dataset.tab;

            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

            this.classList.add('active');
            document.getElementById('tab-' + tab).classList.add('active');
        });
    });
</script>